<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.web.*?>
<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="350.0" prefWidth="700.0" styleClass="dark_background" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.amuyana.app.controllers.LogicSystemController">
   <content>
      <VBox alignment="CENTER" fillWidth="false" styleClass="dark_background">
         <children>
            <VBox spacing="10.0" styleClass="light_background">
               <children>
                  <VBox spacing="10.0">
                     <children>
                        <HBox alignment="CENTER_LEFT">
                           <children>
                              <Label minWidth="-Infinity" prefWidth="100.0" styleClass="light_h2" text="Label: ">
                                 <font>
                                    <Font size="15.0" />
                                 </font></Label>
                              <TextField fx:id="labelTextField" prefWidth="400.0" HBox.hgrow="ALWAYS">
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin></TextField>
                           </children>
                        </HBox>
                        <HBox>
                           <children>
                              <Label minWidth="-Infinity" prefWidth="100.0" styleClass="light_h2" text="Description:">
                                 <font>
                                    <Font size="15.0" />
                                 </font></Label>
                              <TextArea fx:id="descriptionTextArea" minWidth="-Infinity" prefHeight="200.0" prefWidth="500.0" wrapText="true" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="220.0">
                           <children>
                              <Label minWidth="-Infinity" prefWidth="100.0" text="ID: " />
                              <Label fx:id="idLabel" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT">
                           <children>
                              <Label minWidth="-Infinity" prefWidth="100.0" text="Created:" />
                              <Label fx:id="creationDateLabel" text=" " />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <HBox alignment="CENTER" spacing="5.0">
                     <children>
                        <Button fx:id="saveButton" defaultButton="true" maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#save" prefWidth="90.0" styleClass="green_button" text="Save" textFill="WHITE">
                           <font>
                              <Font size="15.0" />
                           </font></Button>
                        <Button fx:id="loadButton" disable="true" layoutX="10.0" layoutY="10.0" maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#load" prefWidth="90.0" styleClass="green_button" text="Load" textFill="#eee82c" />
                        <Button fx:id="deleteButton" disable="true" maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#delete" prefWidth="90.0" styleClass="red_button" text="Delete" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
         <padding>
            <Insets top="20.0" />
         </padding>
      </VBox>
   </content>
</ScrollPane>
