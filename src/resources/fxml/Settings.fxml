<ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="900.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SettingsController">
   <content>
      <VBox alignment="TOP_CENTER" fillWidth="false">
         <children>
            <VBox>
               <children>
                  <VBox maxWidth="1.7976931348623157E308" minWidth="600.0" prefWidth="800.0" spacing="20.0">
                     <children>
                        <VBox alignment="CENTER_LEFT" spacing="5.0">
                           <children>
                              <Label text="Database" />
                              <Separator prefWidth="500.0" />
                              <VBox fillWidth="false" spacing="10.0">
                                 <children>
                                    <HBox alignment="CENTER_LEFT" fillHeight="false">
                                       <children>
                                          <Label prefWidth="100.0" text="Hostname:" />
                                          <TextField fx:id="hostNameTextField" editable="false" prefWidth="300.0" text="localhost" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                    <HBox alignment="CENTER_LEFT" fillHeight="false">
                                       <children>
                                          <Label prefWidth="100.0" text="Username:" />
                                          <TextField fx:id="hostUserTextField" editable="false" prefWidth="300.0" text="root" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                    <HBox alignment="CENTER_LEFT" fillHeight="false">
                                       <children>
                                          <Label prefWidth="100.0" text="Password:" />
                                          <TextField fx:id="hostPasswordTextField" prefWidth="300.0" HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                              <HBox alignment="CENTER_LEFT" spacing="10.0">
                                 <children>
                                    <ToggleButton fx:id="connectDisconnectToggleButton" mnemonicParsing="false" onAction="#connectDisconnect" text="Connect" />
                                    <CheckBox fx:id="useDefaultServerCheckBox" maxHeight="1.7976931348623157E308" maxWidth="-Infinity" mnemonicParsing="false" onAction="#useDefaultServer" selected="true" text="Use default server" wrapText="true" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Account" />
                              <Separator prefWidth="500.0" />
                              <VBox fillWidth="false" spacing="10.0">
                                 <children>
                                    <HBox alignment="CENTER_LEFT" fillHeight="false">
                                       <children>
                                          <Label prefWidth="100.0" text="Name:" />
                                          <TextField fx:id="userNameTextField" prefWidth="300.0" text="public_user" />
                                          <Label fx:id="userNameLabel" layoutX="10.0" layoutY="15.0" text="user name" />
                                       </children>
                                    </HBox>
                                    <HBox alignment="CENTER_LEFT" fillHeight="false" layoutX="10.0" layoutY="45.0">
                                       <children>
                                          <Label prefWidth="100.0" text="email:" />
                                          <TextField fx:id="userEmailTextField" prefWidth="300.0" />
                                          <Label fx:id="userEmailLabel" text="email" />
                                       </children>
                                    </HBox>
                                    <HBox alignment="CENTER_LEFT" fillHeight="false" layoutX="10.0" layoutY="170.0">
                                       <children>
                                          <Label prefWidth="100.0" text="password:" />
                                          <TextField fx:id="userPasswordTextField" prefWidth="300.0" />
                                          <Label text="***" />
                                       </children>
                                    </HBox>
                                    <HBox alignment="CENTER_LEFT" fillHeight="false" layoutX="10.0" layoutY="195.0">
                                       <children>
                                          <Label prefWidth="100.0" text="Repeat password:" wrapText="true" />
                                          <Label fx:id="lblDateJoined" layoutX="88.0" layoutY="10.0" />
                                          <TextField fx:id="userRepeatPasswordTextField" prefWidth="300.0" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                              <HBox alignment="CENTER_LEFT" spacing="10.0">
                                 <children>
                                    <Button fx:id="editButton" layoutX="528.0" layoutY="10.0" minHeight="-Infinity" mnemonicParsing="false" prefWidth="90.0" styleClass="bttn_toolbar" text="Edit" textAlignment="CENTER" wrapText="true" />
                                    <Button fx:id="cancelButton" layoutX="10.0" layoutY="10.0" minHeight="-Infinity" mnemonicParsing="false" prefWidth="90.0" styleClass="bttn_toolbar" text="Cancel" textAlignment="CENTER" wrapText="true" />
                                    <Button fx:id="resetPasswordButton" layoutX="100.0" layoutY="10.0" maxHeight="1.7976931348623157E308" minHeight="-Infinity" mnemonicParsing="false" prefWidth="90.0" styleClass="bttn_toolbar" text="Reset password" textAlignment="CENTER" wrapText="true" />
                                    <Button fx:id="createAccountButton" minHeight="-Infinity" mnemonicParsing="false" prefWidth="90.0" styleClass="bttn_toolbar" text="Create account" textAlignment="CENTER" wrapText="true" />
                                    <Button fx:id="signInButton" minHeight="-Infinity" mnemonicParsing="false" prefWidth="90.0" styleClass="bttn_toolbar" text="Sign in" textAlignment="CENTER" wrapText="true" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </content>
</ScrollPane>
